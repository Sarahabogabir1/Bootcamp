
<h1> FIND YOUR SPOT </h1>

<div class="controls">
  <label>Filter:</label>
  
  <button class="filter" data-filter="all">All</button>
  <button class="filter" data-filter=".beginner">Category 1</button>
  <button class="filter" data-filter=".intermediate">Category 2</button>
   <button class="filter" data-filter=".advanced">Category 3</button>

  <label>Sort:</label>
  
  <button class="sort" data-sort="myorder:asc">Asc</button>
  <button class="sort" data-sort="myorder:desc">Desc</button>
</div>
<!-- Loop through the category's locations -->
<div id="Container" class="container">
  <div class="mix beginner" data-myorder="1"></div>
  <div class="mix beginner" data-myorder="2"></div>
  <div class="mix beginner" data-myorder="3"></div>
  <div class="mix intermed" data-myorder="4"></div>
  <div class="mix intermed" data-myorder="5"></div>
  <div class="mix advanced" data-myorder="6"></div>
  <div class="mix advanced" data-myorder="7"></div>
  <div class="mix advanced" data-myorder="8"></div>
  
  <div class="gap"></div>
  <div class="gap"></div>
</div>